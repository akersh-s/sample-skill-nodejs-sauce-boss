{
    "type": "APL",
    "version": "1.0",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-viewport-profiles",
            "version": "1.0.0"
        },
        {
            "name": "alexa-layouts",
            "version": "1.0.0"
        },
        {
            "name": "alexa-styles",
            "version": "1.0.0"
        }
    ],
    "resources": [
        {
            "description": "Sauce boss background image assets",
            "when": "${@viewportProfile == @hubRoundSmall}",
            "strings": {
                "backgroundBottom": "https://s3.amazonaws.com/sauceboss/sauceBoss-background-bottom-smHub.png",
                "backgroundLeft": "https://s3.amazonaws.com/sauceboss/sauceBoss-background-left-smHub.png",
                "backgroundRight": "https://s3.amazonaws.com/sauceboss/sauceBoss-background-right-smHub.png",
                "backgroundSecret": "https://s3.amazonaws.com/sauceboss/sauceBoss-background-secret-smHub.png"
            }
        },
        {
            "description": "Sauce boss background image assets",
            "when": "${@viewportProfile == @hubLandscapeMedium || @viewportProfile == @hubLandscapeLarge}",
            "strings": {
                "backgroundBottom": "https://s3.amazonaws.com/sauceboss/sauceBoss-background-bottom-Hub.png",
                "backgroundLeft": "https://s3.amazonaws.com/sauceboss/sauceBoss-background-left-Hub.png",
                "backgroundRight": "https://s3.amazonaws.com/sauceboss/sauceBoss-background-right-Hub.png",
                "backgroundSecret": "https://s3.amazonaws.com/sauceboss/sauceBoss-background-secret-Hub.png"
            }
        },
        {
            "description": "Sauce boss background image assets",
            "when": "${@viewportProfile == @tvLandscapeXLarge}",
            "strings": {
                "backgroundBottom": "https://s3.amazonaws.com/sauceboss/sauceBoss-background-bottom-TV.png",
                "backgroundLeft": "https://s3.amazonaws.com/sauceboss/sauceBoss-background-left-TV.png",
                "backgroundRight": "https://s3.amazonaws.com/sauceboss/sauceBoss-background-right-TV.png",
                "backgroundSecret": "https://s3.amazonaws.com/sauceboss/sauceBoss-background-secret-TV.png"
            }
        },
        {
            "description": "Sauce boss image assets",
            "strings": {
                "bbq": "https://s3.amazonaws.com/sauceboss/bbq-sauce-500x500.png",
                "cranberry": "https://s3.amazonaws.com/sauceboss/cranberry-sauce-500x500.png",
                "honeyMustard": "https://s3.amazonaws.com/sauceboss/honey-mustard-sauce-500x500.png",
                "pesto": "https://s3.amazonaws.com/sauceboss/pesto-sauce-500x500.png",
                "pizza": "https://s3.amazonaws.com/sauceboss/pizza-sauce-500x500.png",
                "secretSauce": "https://s3.amazonaws.com/sauceboss/secret-sauce-500x500.png",
                "tartar": "https://s3.amazonaws.com/sauceboss/tartar-sauce-500x500.png",
                "thousandIsland": "https://s3.amazonaws.com/sauceboss/thousand-island-sauce-500x500.png",
                "skillIcon": "https://s3.amazonaws.com/sauceboss/skill-icon.png"
            }
        }
    ],
    "layouts": {
        "SauceListItem": {
            "parameters": [
                {
                    "name": "imgSrc",
                    "type": "string"
                },
                {
                    "name": "sauce",
                    "type": "string"
                }
            ],
            "items": [
                {
                    "when": "${@viewportProfile == @hubRoundSmall}",
                    "type": "Container",
                    "direction": "column",
                    "width": "50vw",
                    "height": "70vh",
                    "alignItems": "center",
                    "items": [
                        {
                            "type": "Image",
                            "source": "${imgSrc}",
                            "width": "50vh",
                            "height": "50vh",
                            "borderRadius": "5vh",
                            "scale": "best-fill"
                        },
                        {
                            "type": "Text",
                            "text": "${ordinal}. ${sauce}",
                            "width": "50vw",
                            "height": "20vh",
                            "paddingTop": "3vh",
                            "fontSize": "5vw",
                            "fontWeight": 100,
                            "textAlign": "center"
                        }
                    ]
                },
                {
                    "when": "${@viewportProfile == @hubLandscapeMedium || @viewportProfile == @hubLandscapeLarge || @viewportProfile == @tvLandscapeXLarge}",
                    "type": "Container",
                    "direction": "column",
                    "width": "25vw",
                    "height": "30vh",
                    "alignItems": "center",
                    "items": [
                        {
                            "type": "Image",
                            "source": "${imgSrc}",
                            "width": "22vh",
                            "borderRadius": "22vh",
                            "height": "22vh",
                            "scale": "best-fill"
                        },
                        {
                            "type": "Text",
                            "text": "${sauce}",
                            "width": "25vw",
                            "height": "17vh",
                            "paddingTop": "2vh",
                            "fontSize": "2.5vw",
                            "fontWeight": 100,
                            "textAlign": "center"
                        }
                    ]
                }
            ]
        }
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "direction": "column",
                "items": [
                    {
                        "type": "Image",
                        "source": "@backgroundRight",
                        "scale": "best-fill",
                        "width": "100vw",
                        "height": "100vh"
                    },
                    {
                        "type": "Container",
                        "position": "absolute",
                        "width": "100vw",
                        "height": "100vh",
                        "direction": "column",
                        "items": [
                            {
                                "type": "AlexaHeader",
                                "headerTitle": "BROKEN HEADER",
                                "headerAttributionImage": ""
                            },
                            {
                                "when": "${@viewportProfile == @hubRoundSmall}",
                                "type": "Sequence",
                                "scrollDirection": "horizontal",
                                "numbered": true,
                                "width": "100vw",
                                "height": "70vh",
                                "position": "relative",
                                "alignItems": "center",
                                "justifyContent": "center",
                                "direction": "column",
                                "items": [
                                    {
                                        "type": "SauceListItem",
                                        "sauce": "BBQ Sauce",
                                        "paddingLeft": "25vw",
                                        "imgSrc": "@bbq"
                                    },
                                    {
                                        "type": "SauceListItem",
                                        "sauce": "Cranberry Sauce",
                                        "paddingLeft": "35vw",
                                        "imgSrc": "@cranberry"
                                    },
                                    {
                                        "type": "SauceListItem",
                                        "sauce": "Honey Mustard",
                                        "paddingLeft": "45vw",
                                        "imgSrc": "@honeyMustard"
                                    },
                                    {
                                        "type": "SauceListItem",
                                        "sauce": "Pesto",
                                        "paddingLeft": "55vw",
                                        "imgSrc": "@pesto"
                                    },
                                    {
                                        "type": "SauceListItem",
                                        "sauce": "Pizza Sauce",
                                        "paddingLeft": "60vw",
                                        "imgSrc": "@pizza"
                                    },
                                    {
                                        "type": "SauceListItem",
                                        "sauce": "Tartar Sauce",
                                        "paddingLeft": "65vw",
                                        "imgSrc": "@tartar"
                                    },
                                    {
                                        "type": "SauceListItem",
                                        "sauce": "Thousand Island",
                                        "paddingLeft": "65vw",
                                        "imgSrc": "@thousandIsland"
                                    },
                                    {
                                        "type": "SauceListItem",
                                        "paddingLeft": "65vw",
                                        "paddingRight": "75vw",
                                        "sauce": "Secret Sauce",
                                        "imgSrc": "@secretSauce"
                                    }
                                ]
                            },
                            {
                                "when": "${@viewportProfile == @hubLandscapeMedium || @viewportProfile == @hubLandscapeLarge || @viewportProfile == @tvLandscapeXLarge}",
                                "type": "Container",
                                "width": "100vw",
                                "height": "60vh",
                                "direction": "column",
                                "alignItems": "center",
                                "justifyContent": "center",
                                "items": [
                                    {
                                        "type": "Container",
                                        "width": "100vw",
                                        "height": "30vh",
                                        "direction": "row",
                                        "items": [
                                            {
                                                "type": "SauceListItem",
                                                "sauce": "BBQ Sauce",
                                                "imgSrc": "@bbq"
                                            },
                                            {
                                                "type": "SauceListItem",
                                                "sauce": "Cranberry Sauce",
                                                "imgSrc": "@cranberry"
                                            },
                                            {
                                                "type": "SauceListItem",
                                                "sauce": "Honey Mustard",
                                                "imgSrc": "@honeyMustard"
                                            },
                                            {
                                                "type": "SauceListItem",
                                                "sauce": "Pesto",
                                                "imgSrc": "@pesto"
                                            }
                                        ]
                                    },
                                    {
                                        "type": "Container",
                                        "width": "100vw",
                                        "height": "30vh",
                                        "position": "relative",
                                        "top": "1vh",
                                        "direction": "row",
                                        "items": [
                                            {
                                                "type": "SauceListItem",
                                                "sauce": "Pizza Sauce",
                                                "imgSrc": "@pizza"
                                            },
                                            {
                                                "type": "SauceListItem",
                                                "sauce": "Tartar Sauce",
                                                "imgSrc": "@tartar"
                                            },
                                            {
                                                "type": "SauceListItem",
                                                "sauce": "Thousand Island",
                                                "imgSrc": "@thousandIsland"
                                            },
                                            {
                                                "type": "SauceListItem",
                                                "sauce": "Secret Sauce",
                                                "imgSrc": "@secretSauce"
                                            }
                                        ]
                                    }
                                ]
                            },
                            {
                                "when": "${@viewportProfile == @hubLandscapeMedium || @viewportProfile == @hubLandscapeLarge || @viewportProfile == @tvLandscapeXLarge}",
                                "type": "AlexaFooter",
                                "footerHint": "BROKEN FOOTER"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
